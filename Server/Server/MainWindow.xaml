        <TextBox Name="Control_Username" HorizontalAlignment="Left" Margin="100,0,0,10.6" TextWrapping="Wrap" Text="孤独的狼" Width="147" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Bottom"/>
        <Label Content="输入昵称：" HorizontalAlignment="Left" Margin="25,0,0,9.6" Height="26" VerticalAlignment="Bottom"/>
    </Grid>
